RewriteEngine On

# Ruta para login
RewriteRule ^login$ index.php?entidad=auth&accion=login [NC]

# Ruta para logout
RewriteRule ^logout$ index.php?entidad=auth&accion=logout [NC]

# Ruta para dashboard
RewriteRule ^dashboard$ index.php?entidad=dashboard&accion=dashboard [NC]

# Ruta para las otras entidades y acciones
RewriteRule ^([a-z\-_]+)$ index.php?entidad=$1 [NC]
RewriteRule ^([a-z\-_]+)/create$ index.php?entidad=$1&accion=create [NC]
RewriteRule ^([a-z\-_]+)/([a-z\-_]+)$ index.php?entidad=$1&accion=$2 [NC]
RewriteRule ^([a-z\-_]+)/([0-9]+)$ index.php?entidad=$1&id=$2&accion=view [NC]
RewriteRule ^([a-z\-_]+)/([0-9]+)/(edit|delete|view|list)$ index.php?entidad=$1&id=$2&accion=$3 [NC]
